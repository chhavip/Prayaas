<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chhavi.prayaas.SignUpActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/usernameText"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25dp"
            android:text="UserName"
            android:gravity="center"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="6"
            android:id="@+id/newusername"
            android:layout_gravity="center"
            android:hint="UserName"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/nameText"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25dp"
            android:text="Full Name"
            android:gravity="center"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="6"
            android:id="@+id/newname"
            android:layout_gravity="center"
            android:hint="Name"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/passwordText"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25dp"
            android:text="Password"
            android:gravity="center"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:layout_weight="6"
            android:id="@+id/newpassword"
            android:layout_gravity="center"
            android:hint="Password"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/phoneText"
            android:text="Contact"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25dp"
            android:gravity="center"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="6"
            android:id="@+id/newphone"
            android:layout_gravity="center"
            android:hint="Contact"
            android:gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/ageText"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25dp"
            android:text="Age"
            android:gravity="center"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="6"
            android:id="@+id/newage"
            android:layout_gravity="center"
            android:hint="Age"
            android:text="20"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="4"
            android:text="Gender"
            />
        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Male"
                android:id="@+id/male"
                android:onClick="maleClick"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Female"
                android:id="@+id/female"
                android:onClick="femaleClick"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/referralText"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25dp"
            android:text="Referral   (Optional)"
            android:gravity="center"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="6"
            android:id="@+id/newreferral"
            android:layout_gravity="center"
            android:hint="Optional"
            android:gravity="center"/>
    </LinearLayout>

    <Button
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/newsignup"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"/>




</LinearLayout>
