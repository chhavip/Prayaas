<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Incentives"
        android:id="@+id/textView2"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs 500"
        android:id="@+id/incentive_value"
        android:textColor="@color/black"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="113dp" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DONATE"
        android:id="@+id/donate_button"
        android:background="@color/dark_purple_A100"
        android:layout_marginBottom="96dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/incentive_value"
        android:layout_toStartOf="@+id/incentive_value" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COLLECT"
        android:background="@color/dark_purple_A100"
        android:id="@+id/collect_button"
        android:layout_alignTop="@+id/donate_button"
        android:layout_toRightOf="@+id/incentive_value"
        android:layout_toEndOf="@+id/incentive_value" />

</RelativeLayout>