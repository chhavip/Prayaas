<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/donate">


    <android.support.v7.widget.CardView android:layout_width="match_parent"

        android:layout_height="wrap_content"
        cardview:cardElevation="10dp"
        cardview:cardMaxElevation = "2dp"
        cardview:cardCornerRadius = "10dp"

        cardview:contentPadding = "20dp"
        android:layout_marginTop="80dp"
        android:id="@+id/card">
        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prayaasDonate"
                android:layout_gravity = "center"
                android:id="@+id/textView3"
                android:textColor="@color/black"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <EditText
        android:id="@+id/donationAmount"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp"
        android:background="@color/blue_50"
        android:hint="Donation Amount"
        android:inputType="number"
        android:padding="10dp"
        android:gravity="center"
        android:singleLine="true"
        android:layout_gravity = "center"
        android:textColor="@color/input_register"
        android:textColorHint="@color/input_register_hint" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="DONATE"
        android:background="@color/red_700"
        android:id="@+id/donateButton"
        android:layout_gravity = "center"
        android:layout_alignTop="@+id/donate_button"
        android:layout_toRightOf="@+id/incentive_value"
        android:layout_toEndOf="@+id/incentive_value" />

</LinearLayout>