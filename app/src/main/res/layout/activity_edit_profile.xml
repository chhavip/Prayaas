<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.chhavi.prayaas.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="match_parent"
                android:id="@+id/edit_name"
                android:textSize="20sp"
                android:paddingLeft="5dp"
                android:hint="NAME"
                android:textStyle="bold"
                android:textColor="#000000"
                android:capitalize="characters"
                android:gravity="center_vertical"

                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@drawable/bydeafultuserimage"
                android:layout_marginStart="5dp"

                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:inputType="textEmailAddress"
                    android:id="@+id/edit_age"
                    android:textColor="@color/primary_text"
                    android:gravity="center"
                    android:hint="AGE"
                    android:text="20"
                    android:layout_gravity="center"
                    android:layout_marginTop="38dp"
                    android:layout_marginBottom="6dp"
                    android:background="@color/grey_100"
                    />
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:hint="GENDER"
                    android:id="@+id/edit_Gender"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="6dp"

                    android:letterSpacing="0.1"
                    android:capitalize="characters"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@color/grey_100" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="DETAILS"
            android:paddingTop="8dp"
            android:textSize="15sp"
            android:layout_marginStart="5dp"
            android:textColor="@color/accent"
            ></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/accent"
            android:layout_marginRight="20dp"
            android:layout_marginStart="5dp"
            android:id="@+id/view" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Email: "
                android:textSize="14sp"
                android:textColor="@color/secondary_text"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:id="@+id/edit_email"
                android:text="shikhark211@gmail.com"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:textColor="@color/primary_text"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey_200"
            android:layout_marginRight="20dp"
            android:layout_marginStart="46dp"
            android:id="@+id/view2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Phone: "
                android:textSize="14sp"
                android:textColor="@color/secondary_text"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:text="9810357548 "
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                android:id="@+id/edit_phone"

                android:textColor="@color/primary_text"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey_200"
            android:layout_marginRight="20dp"
            android:layout_marginStart="46dp"
            android:id="@+id/view3" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Referral : "
                android:textSize="14sp"
                android:textColor="@color/secondary_text"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:id="@+id/profileFragmentReferral"
                android:text="Referral"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:textColor="@color/primary_text"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey_300"
            android:layout_marginRight="20dp"
            android:layout_marginStart="46dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/passwordlogo1"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:inputType="textPassword"
                android:text="password"
                android:layout_marginTop="2dp"
                android:id="@+id/edit_password"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"></View>
        </LinearLayout>




        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/saveButton"
            android:layout_width="150dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/accent"
            android:text="Save" />

    </LinearLayout>

</FrameLayout>
