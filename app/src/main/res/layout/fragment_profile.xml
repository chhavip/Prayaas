<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="match_parent"
                android:id="@+id/profileFragmentName"
                android:textSize="20sp"
                android:paddingLeft="5dp"
                android:hint="NAME"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center_vertical"

                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@drawable/bydeafultuserimage"
                android:layout_marginStart="5dp"

                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/profileFragmentAge"
                    android:textColor="@color/primary_text"
                    android:gravity="center"
                    android:hint="AGE"
                    android:text=" "
                    android:layout_gravity="center"
                    android:layout_marginTop="38dp"
                    android:layout_marginBottom="6dp"
                    android:background="@color/grey_100"
                    />
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/profileFragmentGender"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="38dp"
                    android:layout_marginTop="6dp"

                    android:letterSpacing="0.1"
                    android:gravity="center"
                    android:layout_gravity="center"

                    android:background="@color/grey_100" />
                <!--android:hint="PHONE"-->

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="DETAILS"
            android:paddingTop="8dp"
            android:textSize="15sp"
            android:layout_marginStart="5dp"
            android:textColor="@color/accent"
            ></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/accent"
            android:layout_marginRight="20dp"
            android:layout_marginStart="5dp"
            android:id="@+id/view" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp">
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Email: "
                android:textSize="14sp"
                android:textColor="@color/secondary_text"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:id="@+id/profileFragmentEmail"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:textColor="@color/primary_text"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey_200"
            android:layout_marginRight="20dp"
            android:layout_marginStart="46dp"
            android:id="@+id/view2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp">
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Phone: "
                android:textSize="14sp"
                android:textColor="@color/secondary_text"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                android:id="@+id/phoneNumber"

                android:textColor="@color/primary_text"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey_200"
            android:layout_marginRight="20dp"
            android:layout_marginStart="46dp"
            android:id="@+id/view3" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp">
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Referral : "
                android:textSize="14sp"
                android:textColor="@color/secondary_text"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:id="@+id/profileFragmentReferral"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:textColor="@color/primary_text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
        </LinearLayout>



        <!--        <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/LogOut"
                    android:layout_width="150dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/accent"
                    android:text="Log Out" />-->

    </LinearLayout>
    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        >

        <!--        <com.gc.materialdesign.views.ButtonRectangle
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Edit"
                    android:id="@+id/fab"
                    android:background="@color/accent"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />-->

    </FrameLayout>
</FrameLayout>

